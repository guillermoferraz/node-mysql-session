{{> nav}}
<div class="container">
    <div class="row">
        <div class="col-md-3 mt-4">
            <div class="card shadow shadow-3">
                <div class="card-header">
                    <div class="card-title">
                        <h5>Edit data</h5>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/data-edit/{{data.id}}" method='post'>
                        <input type="text" name="title" class="form-control mt-2" placeholder="Title" value={{data.title}}>
                        <textarea name="description" rows=5 class="form-control mt-2" placeholder="Description">{{data.description}}</textarea>
                        <input type="text" name="image" placeholder="Image url" class="form-control mt-2" value={{data.image}}>

                        <div class="d-grid gap-2 mt-2">
                            <button class='btn btn-success'>Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-5 mt-5">
            <img src="{{data.image}}" alt="image" class="img-thumbnail img-fluid">
        </div>
        
        
    </div>


</div>

